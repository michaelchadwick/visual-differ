{
  "name": "visual-differ",
  "version": "1.0.0",
  "description": "A modern CLI tool for comparing screenshot directories using odiff with accessible HTML reports",
  "type": "module",
  "main": "./dist/lib/visual-differ.js",
  "bin": {
    "visual-differ": "./dist/bin/visual-differ.js"
  },
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,json,md}\"",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm run typecheck && pnpm run lint && pnpm run test && pnpm run build"
  },
  "keywords": [
    "screenshot",
    "visual-diff",
    "odiff",
    "testing",
    "ci",
    "visual-regression"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.23.0",
  "engines": {
    "node": ">=24.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/pngjs": "^6.0.5",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "@vitest/coverage-v8": "^4.0.13",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.13"
  },
  "dependencies": {
    "commander": "^14.0.2",
    "pixelmatch": "^7.1.0",
    "pngjs": "^7.0.0"
  }
}
